<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="WindowBackground">#F5F6FA</Color>
    <Color x:Key="PanelBackground">White</Color>
    <Color x:Key="PanelBorder">#E0E0E0</Color>
    <Color x:Key="TextColor">#222</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackground}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackground}" />
    <SolidColorBrush x:Key="PanelBorderBrush" Color="{StaticResource PanelBorder}" />
    <SolidColorBrush x:Key="TextColorBrush" Color="{StaticResource TextColor}" />
</ResourceDictionary>